{% extends '::base.html.twig' %}

{% block body %}

    <table class="table table-hover table-responsive">
        <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Options</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
                <td>
                    <a href="{{ path('tms_product_page_edit', { 'id': product.id }) }}" class="btn btn-default btn-sm">Edit</a>
                    <a href="{{ path('tms_product_page_delete', { 'id': product.id }) }}" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        {% endfor %}
        <tr>
            <td colspan="4">
                <a href="{{ path('tms_product_page_create') }}" class="btn btn-primary btn-sm">Add product</a>
            </td>
        </tr>
        </tbody>
    </table>

{% endblock %}